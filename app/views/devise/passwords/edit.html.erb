<h2><%= t("devise.passwords.edit.change_your_password") %></h2>

<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, t("devise.passwords.edit.new_password") %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('devise.passwords.edit.characters_minimum') %>)</em>
        <% end %>
        <div class="col-sm-6">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password") %>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="mb-3">
        <div class="col-sm-offset-2 col-sm-6">
          <%= f.submit t("devise.passwords.edit.change_my_password") %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
